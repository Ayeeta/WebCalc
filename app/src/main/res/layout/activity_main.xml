<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/numberOneTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:layout_marginTop="100dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/numberTwoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:layout_below="@id/numberOneTxt"
        android:layout_marginTop="40dp"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/op_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:entries="@array/operation_array"
        android:layout_below="@id/numberTwoTxt"/>

    <Button
        android:id="@+id/btn_calc"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/op_spinner"
        android:text="@string/calc_btn" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_below="@id/btn_calc"
        android:text="@string/txt_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview"
        android:layout_below="@id/textViewResult"
        android:layout_marginTop="20dp">


    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>